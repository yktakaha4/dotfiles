#!/usr/bin/env zsh

namespace="$1"
pod_name_prefix="$2"
command=${@:3}

set -eu

answer="$(mktemp)"
kcsp "$namespace" "$pod_name_prefix" 2>"$answer"
pod_name="$(cat "$answer")"

if [[ "$pod_name" = "" ]]; then
    echo "unfound: $pod_name_prefix"
    exit 1
fi

kubectl exec -n "$namespace" -it "$pod_name" -- ${command:-bash}
